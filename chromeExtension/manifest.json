{
  "manifest_version": 2,

  "name": "Vido",
  "description": "This extension will shorten longform text.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon2.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
 ],
 "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }
]
}
